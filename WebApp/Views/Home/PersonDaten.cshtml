@using Microsoft.AspNetCore.Server.Kestrel.Core
@model List<string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <form action="/home/persondaten" method="post">
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name"  required>
        <br>
        <label for="Nachname">Nachname</label>
        <input type="text" id="Nachname" name="Nachname"  required>
        <br>
        <label for="Geburtsdatum">Geburtsdatum</label>
        <input type="date" id="Geburtsdatum" name="Geburtsdatum"  required>
        <br>
        <label for="Lieblingsfarbe">Lieblingsfarbe</label>
        <input type="color" id="Lieblingsfarbe" name="Lieblingsfarbe"  required>
        <br>
        <button type="submit" class="btn btn-primary" id="CreateButton">Create Person</button>
        
        
    </form>
  
  @if(Model != null)
  {
      <h2>Guten tag @Model[0] @Model[1] Sie sind also am @Model[2] und ihre Lieblings Farbe <span style="background-color:@Model[3]">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;4</span> </h2>
    
  }
</div>
</body>
</html>  